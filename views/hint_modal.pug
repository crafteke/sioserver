div(class="modal",id="modal-hints")
  div(class="modal-container")
    div(class="modal-header")
      a(href="#",class="btn btn-clear float-right",onclick='$("#modal-hints").toggleClass("active");',aria-label="Close")
      div(class="modal-title h5",id="log_title") Hints
      div(id='menu_hint' class='container')
        each l_h,hint_room in hints
          a(href="#"+hint_room,class="btn btn-primary float-left m-1")=hint_room
    div(class="modal-body")
        div(class="container")
          each line_hints,hint_room in hints
            div(id=hint_room)
              h4=hint_room
              table(class='table table-striped table-hover')
                thead
                  th(width='75%') Text
                  th(width='20%') Action
                tbody
                  each hint in line_hints
                    tr
                      td=hint['text']
                      td
                        button(class='btn btn-primary command_button',data-controller_id=hint_room ,data-value=hint['index']) Give!
    div(class="modal-footer")
      a(href="#menu_hint",class="btn float-left m-1") Top
      button(class="btn btn-primary",onclick='$("#modal-hints").toggleClass("active");') Close
