html
  head
    style
      include ../css/spectre.min.css
      include ../css/spectre-exp.min.css
      include ../css/spectre-icons.min.css
      include ../css/masterize.css
    script(src='jquery-3.6.0.min.js')
    script(src='masterize.js')
  body
    div(class='content container')
      include menu.pug
      include hint_modal.pug
      br
      br
      br
      div(class="m-1")
        div(class='container columns p-3 col-gapless')
          div(class='columns col-2')
            select(id="language_select" class="form-select selectable")
              option(value='0',selected='',class="select_none") French
              option(value='1',class="select_none") English
              option(value='2',class="select_none") Japenese
        br
        br
        div(class='container columns p-1 col-gapless')
          div(class='columns col-6 col-gapless')
            div(class='column')
              button(class='btn btn-success',id="start_game") Start game
            div(class='column ')
              button(class='btn btn-error',id="stop") Stop game
            div(class='column ')
              button(class='btn btn-error',id="shutdown_control") System shutdown
            div(class='column ')
              button(class='btn btn-success',id="start_unity") Start Engine
          div(class='column col-3 col-sm-6')
            div(class='popover popover-bottom')
                button(class='btn btn-primary m-1') Speech
                div(class='popover-container')
                    div(class='float-left card')
                      div(class='card-header') Speech
                      div(class='card-body')
                        div(class="form-group")
                          label(class="form-label" for="input-speech") Message
                            textarea(class="form-input" id="input-speech" placeholder="Type your text" rows="3")
                            select(id="input-speech-room" class="form-select selectable")
                              option(value='1',selected='',class="select_none") HAL
                              option(value='4',selected='',class="select_none") Corridor
                              option(value='8',selected='',class="select_none") room 01
                              option(value='6',selected='',class="select_none") room 02
                              option(value='2',selected='',class="select_none") room 03
                              option(value='7',selected='',class="select_none") room 04
                          button(class='float-right m-1 btn btn-primary' id="speech_action") Talk!
                          button(class='float-right m-1 btn btn-error' id="speech_clear") Clear
            button(class='btn btn-primary m-1',id='hint_button') Hints
            div(class='popover popover-bottom')
                button(class='btn btn-primary m-1') Bypass
                div(class='popover-container')
                    div(class='float-left card')
                      each commands,level in bypass_commands
                        div(class='card-header') Bypass
                        div(class='card-body')
                          table(class='table table-striped table-hover')
                            thead
                              th(width='50%') Command
                              th(width='50%') Trigger
                            tbody
                            each values, command in commands
                              tr(id=command)
                                td=command
                                td
                                  button(class='btn btn-primary command_button' data-controller_id=command, value=1) Activate
      div(class='container')
        div(class='columns')
          div(class='column col-4 mt-1')
            img(class="img-responsive",src="http://halpi.local:8080/stream/video.mjpeg")
          div(class='column col-4 mt-1')
            img(class="img-responsive",src="http://counterpadpi.local:8080/stream/video.mjpeg")
          div(class='column col-4 mt-1')
            img(class="img-responsive",src="http://lockerspi.local:8080/stream/video.mjpeg")
          div(class='column col-4 mt-1')
            img(class="img-responsive",src="http://incalpi.local:8080/stream/video.mjpeg")



        //-
          img(class="zoom img-responsive",src="http://halpi.local:8080/stream/video.mjpeg")
          img(class="zoom img-responsive",src="http://counterpadpi.local:8080/stream/video.mjpeg")
          img(class="zoom img-responsive",src="http://lockerspi.local:8080/stream/video.mjpeg")
          img(class="zoom img-responsive",src="http://incalpi.local:8080/stream/video.mjpeg")
          iframe(class="video-responsive", width="720", height="600",frameborder="0",src="http://watchpi.local:8888/")

//-
              div(class='container')
                ul(class="step")
                  li(class="step-item")
                    a(href="#" class="tooltip" data-tooltip="Step 1") step 1
                  li(class="step-item")
                    a(href="#" class="tooltip" data-tooltip="Step 2") step 2
