html
  head
    style
      include ../css/spectre.min.css
      include ../css/spectre-exp.min.css
      include ../css/spectre-icons.min.css
      include ../css/masterize.css
    script(src='jquery-3.6.0.min.js')
    script(src='masterize.js')
  body
    div(class='container')
      include menu.pug
      div(class='container columns p-1')
        div(class='columns col-6 col-gapless')
          div(class='column ')
            button(class='btn btn-success',id="start_game") Start game
          div(class='column ')
            button(class='btn btn-error',id="stop") Stop game
          div(class='column ')
            button(class='btn btn-error',id="shutdown_control") System shutdown
          div(class='column ')
            button(class='btn btn-success',id="start_unity") Start Engine
      div(class='speech_box')
        div(class='popover popover-right')
            button(class='btn btn-primary') Speech
            div(class='popover-container')
                div(class='float-left card')
                  div(class='card-header') Speech
                  div(class='card-body')
                    div(class="form-group")
                      label(class="form-label" for="input-speech") Message
                        textarea(class="form-input" id="input-speech" placeholder="Type your text" rows="3")
                      button(class='float-right m-1 btn btn-primary' id="speech_action") Talk!

      div(class='commands_ux')
        div(class='popover popover-right')
            button(class='btn btn-primary') Hints & Bypass
            div(class='popover-container')
                div(class='float-left card')
                  each commands,level in hints_commands
                    div(class='card-header') Hints
                    div(class='card-body')
                      table(class='table table-striped table-hover')
                        thead
                          th(width='50%') Command
                          th(width='50%') Trigger
                        tbody
                        each values, command in commands
                          tr(id=command)
                            td=command
                            td
                              div(class="form-group")
                                select(class="form-select selectable")
                                  option(value='none',selected='',class="select_none") Select an option
                                  each value,key in values
                                    option(data-controller_id=command,value=value) #{key}
                div(class='float-left card')
                  each commands,level in bypass_commands
                    div(class='card-header') Bypass
                    div(class='card-body')
                      table(class='table table-striped table-hover')
                        thead
                          th(width='50%') Command
                          th(width='50%') Trigger
                        tbody
                        each values, command in commands
                          tr(id=command)
                            td=command
                            td
                              div(class="form-group")
                                select(class="form-select selectable")
                                  option(value='none',selected='',class="select_none") Select an option
                                  each value,key in values
                                    option(data-controller_id=command,value=value) #{key}
      div(class='container')
        img(class="zoom img-responsive",src="http://halpi.local:8080/stream/video.mjpeg")
        img(class="zoom img-responsive",src="http://counterpadpi.local:8080/stream/video.mjpeg")
        img(class="zoom img-responsive",src="http://lockerspi.local:8080/stream/video.mjpeg")
        img(class="zoom img-responsive",src="http://incalpi.local:8080/stream/video.mjpeg")
        iframe(class="video-responsive", width="720", height="600",frameborder="0",src="http://watchpi.local:8888/")
        //-
              div(class='container')
                ul(class="step")
                  li(class="step-item")
                    a(href="#" class="tooltip" data-tooltip="Step 1") step 1
                  li(class="step-item")
                    a(href="#" class="tooltip" data-tooltip="Step 2") step 2
