html
  head
    style
      include ../css/spectre.min.css
      include ../css/spectre-exp.min.css
      include ../css/spectre-icons.min.css
    script(src='jquery-3.6.0.min.js')
    script(src='dashboard.js')
  body
    div(class='container')
      ul(class="tab tab-block")
        li(class="tab-item active")
          a(href="/dashboard",class="active") Services
        li(class="tab-item")
          a(href="/checkup") Checkup
        li(class="tab-item")
          a(href="/dmx",class="") DMX
      div(class='columns')
        div(class='column col-8')
          each services, rpi in rpi_services
            br
            h4=rpi
            table(class='table table-striped table-hover')
              thead
                th(width='30%') Service
                th(width='20%') Running
                th(width='40%') Notify
                th(width='20%') SIO
                th logs
                <!-- th console --!>
                th action
              tbody(id=rpi)

      div(class="modal",id="modal-logs")
        a(href="#close",class="modal-overlay",aria-label="Close")
        div(class="modal-container")
          div(class="modal-header")
            a(href="#close",class="btn btn-clear float-right",aria-label="Close")
            div(class="modal-title h5",id="log_title") Loading...
          div(class="modal-body")
            div(class="content loading loading-lg",id="log_content")
          div(class="modal-footer")
            button(class="btn btn-primary",onclick='$("#modal-logs").toggleClass("active");$("#log_content").addClass("loading loading-lg");$("#log_title").html("Loading...")') Close
